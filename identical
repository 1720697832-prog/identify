    <!-- 悬浮回到顶部按钮 -->
    <button id="backToTop" class="fixed bottom-6 right-6 bg-primary text-white w-10 h-10 rounded-full flex items-center justify-center shadow-lg opacity-0 transition-opacity duration-300">
        <i class="fa fa-arrow-up"></i>
    </button>

    <script>
        // 回到顶部功能
        const backToTopBtn = document.getElementById('backToTop');
        
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTopBtn.classList.replace('opacity-0', 'opacity-100');
            } else {
                backToTopBtn.classList.replace('opacity-100', 'opacity-0');
            }
        });
        
        backToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // 链接点击统计（示例）
        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', (e) => {
                console.log(`访问链接: ${link.href}`);
                // 可添加实际的统计逻辑
            });
        });
    </script>
